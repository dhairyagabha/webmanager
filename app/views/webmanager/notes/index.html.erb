<div class="row">
  <div class="card col bottom-margin">
    <div class="card-block">
      <h4 class="card-title">Notes</h4>
      <hr>
      <div>
        <%= render 'form', note: @note %>
      </div>
    </div>
  </div>
</div>
<div class="row">

  <% @notes.reverse.each do |note| %>
      <div class="col-sm-12 col-md-4 bottom-margin">
        <div class="card">
          <div class="card-block">
            <div class="card-title"><%= note.title.titleize %><span class="float-right">
            <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_note_path(note) %>
              <%= link_to '<i class="fa fa-trash"></i>'.html_safe, note_path(note), method: :delete, data: {confirm: "Are you sure?"} %></span>
            </div>
            <hr>
            <p class="card-text"><%= note.body.html_safe %></p>
          </div>
          <div class="card-data">
            <ul>
              <li><i class="fa fa-clock-o"></i> <%= note.created_at.to_formatted_s(:long) %></li>
            </ul>
          </div>
        </div>
      </div>
  <% end %>
</div>
