<%= form_for(note) do |f| %>
  <% if note.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(note.errors.count, "error") %> prohibited this contact from being saved:</h2>

          <ul>
            <% note.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
  <% end %>

  <div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
    <%= f.text_field :title, class:'mdl-textfield__input' %>
    <%= f.label :title, class:'mdl-textfield__label'%>
  </div>
  <div class="mdl-textfield mdl-js-textfield mdl-cell mdl-cell--12-col">
    <%= f.text_area :body, class:'mdl-textfield__input', rows: 5%>
    <%= f.label :body, class: 'mdl-textfield__label'%>
  </div>


  <% if @note.persisted? %>
    <%= f.submit "Update Note", class:'mdl-button mdl-js-button mdl-button--raised mdl-button--accent' %>
  <% else %>
      <%= f.submit "Create Note", class:'mdl-button mdl-js-button mdl-button--raised mdl-button--accent' %>
  <% end %>
        <%= link_to 'Cancel', notes_path, class:'mdl-button mdl-js-button mdl-button--raised' %>
<% end %>